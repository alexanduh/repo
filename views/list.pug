html
    head
        meta(http-equiv="expires", content="0")
        title Home
        link(rel="stylesheet", href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/css/bootstrap.min.css")
        link(rel="stylesheet", href="/static/base.css")
        script(src="https://code.jquery.com/jquery-3.2.1.slim.min.js")
        script(src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.3/umd/popper.min.js")
        script(src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/js/bootstrap.min.js")
        script(src="/static/main.js")
    body
        div(class="container")
            h1 Upload files
            if message
                p(class=`alert alert-${messageType} alert-dismissible fade show`)= message
                    button(type="button", class="close", data-dismiss="alert")
                        span &times;
            if !auth
                a(href="/login")
                    button(class="btn btn-success") Login
            form(action='/upload', method='POST', enctype='multipart/form-data')
                input(type='file', name='uploadFile')
                button(type="submit") Submit
            div(id="item-boxes")
                each file in files
                    div(id="item-box-wrapper")
                            div(class="item-box")
                                a(href=file.full)
                                    case file.extension
                                        when "txt"
                                            img(src="/static/assets/icons8-txt.png")
                                        when "html"
                                            img(src="/static/assets/icons8-html-filetype.png")
                                        when "png"
                                            img(src="/static/assets/icons8-image-file.png")
                                        when "mp3"
                                            img(src="/static/assets/icons8-audio-file.png")
                                        when "pdf"
                                            img(src="/static/assets/icons8-pdf-2.png")
                                        when "mp4"
                                            img(src="/static/assets/icons8-video-file.png")
                                        when "zip"
                                            img(src="/static/assets/icons8-archive.png")
                                        default
                                            img(src="/static/assets/icons8-file.png")
                                if auth
                                    div(class="center")
                                        a(href=`/files/${file.encodedName}/delete`)
                                            button(class="btn btn-danger") Delete
                                        
                                